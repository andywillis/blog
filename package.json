{
  "name": "journal",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm run parse-markdown && pnpm run build-rss-sprinkles && vite build",
    "preview": "vite preview",
    "lint": "eslint",
    "parse-markdown": "node src/tools/parse-markdown.js",
    "build-rss-sprinkles": "node src/tools/build-rss.js host=sprinkles",
    "build-rss-custard": "node src/tools/build-rss.js host=custard",
    "build-bespoke": "rollup --config rollup-bespoke.config.js && node src/tools/build-index.js && pnpm run build-rss-custard"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "jsdom": "22.1.0",
    "markdown-it": "13.0.1",
    "open-props": "^1.5.10"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/eslint-parser": "^7.22.5",
    "@babel/plugin-syntax-import-assertions": "^7.22.5",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.1.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "fs-extra": "11.1.1",
    "html-minifier": "4.0.0",
    "postcss": "8.4.24",
    "postcss-import": "15.1.0",
    "postcss-import-url": "7.2.0",
    "postcss-nesting": "11.3.0",
    "purgecss": "5.0.0",
    "rollup": "3.26.0",
    "rollup-plugin-gzip": "3.1.0",
    "rollup-plugin-postcss": "4.0.2",
    "vite": "^4.3.9",
    "vite-plugin-compression": "0.5.1"
  }
}
